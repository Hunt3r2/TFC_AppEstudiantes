<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KakeboActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1645dp"
                tools:ignore="MissingClass"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="22dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/boton_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/ic_dialog_info" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/volver_atras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="268dp"
                    android:clickable="true"
                    app:layout_constraintEnd_toStartOf="@+id/boton_info"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/ic_menu_revert" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="276dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="58dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="58dp"
                    android:layout_marginBottom="131dp"
                    android:text="Bienvenido al apartado de Kakebo, puedes darle al icono de informacion para saber como funciona el metodo Kakebo."
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btnSeleccionarFecha"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.263"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/boton_info" />

                <EditText
                    android:id="@+id/dineroGastado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="110dp"
                    android:ems="10"
                    android:inputType="number"
                    android:text="Cantidad Ingresada"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/apartadoGastos" />

                <EditText
                    android:id="@+id/dineroIngresado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="110dp"
                    android:ems="10"
                    android:inputType="number"
                    android:text="Cantidad Ingresada"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ApartadoIngresos" />

                <Button
                    android:id="@+id/boton_mostrarIngresos"
                    android:layout_width="212dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="76dp"
                    android:layout_marginEnd="90dp"
                    android:text="Mostrar Ingresos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.473"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinnerCategoria" />

                <Spinner
                    android:id="@+id/spinnerCategoria"
                    android:layout_width="209dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="73dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="110dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.473"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descIngreso" />

                <EditText
                    android:id="@+id/descIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="110dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Nombre del Ingreso"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dineroIngresado" />

                <EditText
                    android:id="@+id/descGasto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="110dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Nombre del Ingreso"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dineroGastado" />

                <TextView
                    android:id="@+id/ApartadoIngresos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="257dp"
                    android:text="Ingresos"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.473"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnSeleccionarFecha" />

                <Button
                    android:id="@+id/boton_guardar"
                    android:layout_width="212dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="69dp"
                    android:layout_marginEnd="90dp"
                    android:text="Guardar"
                    app:layout_constraintBottom_toTopOf="@+id/boton_mostrarGastos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinnerCategoriaGasto" />

                <TextView
                    android:id="@+id/apartadoGastos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="76dp"
                    android:layout_marginEnd="269dp"
                    android:text="Gastos"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/boton_mostrarIngresos" />

                <Spinner
                    android:id="@+id/spinnerCategoriaGasto"
                    android:layout_width="209dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="111dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descGasto" />

                <Button
                    android:id="@+id/boton_mostrarGastos"
                    android:layout_width="212dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="90dp"
                    android:text="Mostrar Gastos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.526"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/boton_guardar" />

                <Button
                    android:id="@+id/btnSeleccionarFecha"
                    android:layout_width="238dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="81dp"
                    android:layout_marginEnd="92dp"
                    android:layout_marginBottom="7dp"
                    android:text="Seleccionar fecha"
                    app:layout_constraintBottom_toTopOf="@+id/ApartadoIngresos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>