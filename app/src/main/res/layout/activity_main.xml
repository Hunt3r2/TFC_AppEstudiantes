<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/boton_pomodoro"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="16dp"
        android:text="Pomodoro"
        app:layout_constraintBottom_toTopOf="@+id/boton_notas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_kakebo" />

    <Button
        android:id="@+id/boton_kakebo"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="16dp"
        android:text="Kakebo"
        app:layout_constraintBottom_toTopOf="@+id/boton_pomodoro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton_notas"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="205dp"
        android:text="Notas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_pomodoro" />

    <Button
        android:id="@+id/boton_settings"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="110dp"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_pomodoro"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="72dp"
        android:text="Bienvenido a la app de ayuda de estudiantes, que quieres hacer hoy?"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/boton_kakebo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>